<h1>Listing phones</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Nombre</th>
    <th>Modelo</th>
    <th>Precio</th>
    <th>So</th>
    <th>Camara</th>
    <th>Camarafrontal</th>
    <th>Ram</th>
    <th>Pantalla</th>
    <th>Procesador</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.id %></td>
    <td><%= phone.nombre %></td>
    <td><%= phone.modelo %></td>
    <td><%= phone.precio %></td>
    <td><%= phone.so %></td>
    <td><%= phone.camara %></td>
    <td><%= phone.camarafrontal %></td>
    <td><%= phone.ram %></td>
    <td><%= phone.pantalla %></td>
    <td><%= phone.procesador %></td>
    <td><%= phone.rating %></td>
    <td><%= link_to 'Show', phone %></td>
    <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
    <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

